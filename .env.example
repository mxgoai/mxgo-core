# Azure OpenAI Configuration (Legacy)
AZURE_OPENAI_MODEL=your_model_name_here # e.g., gpt-4-turbo
AZURE_OPENAI_API_KEY=your_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
OPENAI_API_VERSION=2023-05-15

# Primary Model Configuration
MODEL_NAME=your_model_name # e.g., gpt-4o-mini
MODEL_ENDPOINT=https://your-model-endpoint.openai.azure.com
MODEL_API_KEY=your_model_api_key
MODEL_API_VERSION=your_model_api_version

# Optional: JINA API Key for deep research capability
# JINA_API_KEY=your_jina_api_key_here

# Email processing configuration
ATTACHMENTS_DIR=email_attachments
MAX_STEPS=10
VERBOSITY=1  # 0=minimal, 1=normal, 2=verbose

# AWS Configuration for Email Sending (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
SENDER_EMAIL=ai-assistant@yourdomain.com

# API Configuration
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=INFO 